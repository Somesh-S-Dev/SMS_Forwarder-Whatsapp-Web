<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
        Security configuration to enforce HTTPS only.
        No cleartext (HTTP) traffic is allowed.
    -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificate authorities -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- 
        Optional: Certificate pinning for additional security
        Uncomment and configure if you want to pin your backend's certificate
    -->
    <!--
